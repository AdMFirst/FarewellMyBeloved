@{
    ViewData["Title"] = "Report Content";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Report Content</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="post">
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="Email" name="Email" required>
                            <div class="form-text">We'll never share your email with anyone else.</div>
                        </div>

                        <div class="mb-3">
                            <label for="Reason" class="form-label">Reason</label>
                            <select class="form-select" id="Reason" name="Reason" required>
                                @foreach(var option in (IEnumerable<SelectListItem>)ViewBag.Reasons)
                                {
                                    <option value="@option.Value">@option.Text</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="Explanation" class="form-label">Explanation</label>
                            <textarea class="form-control" id="Explanation" name="Explanation" rows="4" placeholder="Please provide a detailed explanation of your report..."></textarea>
                        </div>

                        <div class="mb-3">
                            <input type="hidden" id="FarewellPersonId" name="FarewellPersonId" value="@ViewBag.Id">
                            <input type="hidden" id="FarewellMessageId" name="FarewellMessageId" value="@ViewBag.Id">
                            <input type="hidden" id="What" name="What" value="@ViewBag.What">
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Submit Report</button>
                            <a href="@ViewBag.Referer" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>