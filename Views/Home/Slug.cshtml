@model FarewellMyBeloved.Models.FarewellPerson

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                @if (!string.IsNullOrEmpty(Model.BackgroundUrl))
                {
                    <img src="@Model.BackgroundUrl" class="card-img-top" alt="@Model.Name" style="height: 300px; object-fit: cover;">
                }
                else
                {
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 300px;">
                        <span class="text-muted">No Background</span>
                    </div>
                }
                <div class="card-body">
                    <h1 class="card-title">@Model.Name</h1>
                    <p class="card-text">@Html.Raw(Model.Description.Replace("\n", "<br>"))</p>
                    
                    @if (!string.IsNullOrEmpty(Model.PortraitUrl))
                    {
                        <div class="text-center mb-3">
                            <img src="@Model.PortraitUrl" class="img-thumbnail" alt="@Model.Name" style="max-width: 200px; max-height: 200px;">
                        </div>
                    }
                    
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <p><strong>Created:</strong> @Model.CreatedAt.ToString("g")</p>
                            <p><strong>Last Updated:</strong> @Model.UpdatedAt.ToString("g")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Status:</strong> @(Model.IsPublic ? "Public" : "Private")</p>
                            <p><strong>Slug:</strong> @Model.Slug</p>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Farewell Messages</h5>
                </div>
                <div class="card-body">
                    @if (Model.Messages.Any())
                    {
                        <div class="list-group">
                            @foreach (var message in Model.Messages.OrderByDescending(m => m.CreatedAt))
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@message.AuthorName ?? "Anonymous"</h6>
                                        <small>@message.CreatedAt.ToString("g")</small>
                                    </div>
                                    <p class="mb-1">@message.Message</p>
                                    <small>@(message.IsPublic ? "Public" : "Private")</small>
                                </div>
                            }
                        </div>
                        
                        <div class="mt-3">
                            <a asp-controller="FarewellMessage" asp-action="Create" asp-route-farewellPersonId="@Model.Id" class="btn btn-outline-primary btn-sm">Add Message</a>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No messages yet.</p>
                        <a asp-controller="FarewellMessage" asp-action="Create" asp-route-farewellPersonId="@Model.Id" class="btn btn-outline-primary">Add First Message</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>