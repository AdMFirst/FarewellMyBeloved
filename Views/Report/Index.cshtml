@{
    ViewData["Title"] = Localizer["ReportContent"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@Localizer["ReportContent"]</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="post">
                        <div class="mb-3">
                            <label for="Email" class="form-label">@Localizer["EmailAddress"]</label>
                            <input type="email" class="form-control" id="Email" name="Email" required>
                            <div class="form-text">@Localizer["EmailNeverShare"]</div>
                        </div>

                        <div class="mb-3">
                            <label for="Reason" class="form-label">@Localizer["Reason"]</label>
                            <select class="form-select" id="Reason" name="Reason" required>
                                @foreach(var option in (IEnumerable<SelectListItem>)ViewBag.Reasons)
                                {
                                    <option value="@option.Value">@option.Text</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="Explanation" class="form-label">@Localizer["Explanation"]</label>
                            <textarea class="form-control" id="Explanation" name="Explanation" rows="4" placeholder="@Localizer["ExplanationPlaceholder"]"></textarea>
                        </div>

                        <div class="mb-3">
                            <input type="hidden" id="FarewellPersonId" name="FarewellPersonId" value="@ViewBag.FarewellPersonId" />
                            <input type="hidden" id="FarewellMessageId" name="FarewellMessageId" value="@ViewBag.FarewellMessageId" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">@Localizer["SubmitReport"]</button>
                            <a href="@ViewBag.Referer" class="btn btn-secondary">@Localizer["Cancel"]</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
