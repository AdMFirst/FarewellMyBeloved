@model IEnumerable<FarewellMyBeloved.Models.FarewellPerson>

@{
    ViewData["Title"] = "Farewell People";
}

<h1>Farewell People</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(item.PortraitUrl))
                {
                    <img src="@item.PortraitUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                }
                else
                {
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                        <span class="text-muted">No Portrait</span>
                    </div>
                }
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description.Substring(0, Math.Min(item.Description.Length, 100))@(item.Description.Length > 100 ? "..." : "")</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">View Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Created: @item.CreatedAt.ToString("g")</small>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center">
        <h3>No farewell people found</h3>
        <p>Create your first farewell person to get started.</p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>
}