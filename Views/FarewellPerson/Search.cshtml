@model IEnumerable<FarewellMyBeloved.Models.FarewellPerson>

@{
    ViewData["Title"] = Localizer["SearchFarewellPage"];
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8 mx-auto">
            <h1 class="text-center mb-4">@Localizer["SearchFarewellPage"]</h1>
            
            <form asp-action="Search" method="get" class="mb-4">
                <div class="input-group">
                    <input type="text" name="searchTerm" class="form-control" 
                           placeholder="@Localizer["SearchByNameDesc"]" 
                           value="@ViewBag.SearchTerm">
                    <button class="btn btn-primary" type="submit">@Localizer["Search"]</button>
                    <a asp-action="Search" asp-route-searchTerm="" class="btn btn-outline-secondary">@Localizer["Clear"]</a>
                </div>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
    {
        <div class="row mb-4">
            <div class="col-12">
                <h3>@Localizer["SearchResultsFor", ViewBag.SearchTerm]</h3>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm)){
        <div class="row">
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            @if (!string.IsNullOrEmpty(item.PortraitUrl))
                            {
                                <img src="@item.PortraitUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <span class="text-muted">@Localizer["NoPortrait"]</span>
                                </div>
                            }
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">@item.Description.Substring(0, Math.Min(item.Description.Length, 100))@(item.Description.Length > 100 ? "..." : "")</p>
                                <a asp-route="slug" asp-route-slug="@item.Slug" class="btn btn-outline-primary">@Localizer["ViewDetails"]</a>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">@Localizer["CreatedLabel"] @item.CreatedAt.ToString("g")</small>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="text-center py-5">
                        <h3>@(!string.IsNullOrEmpty(ViewBag.SearchTerm) ? Localizer["NoResultsFound"] : Localizer["NoFarewellPagesFound"])</h3>
                        <p class="text-muted">
                            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                            {
                                <span>@Localizer["NoResultsForTerm", ViewBag.SearchTerm]</span>
                            }
                            else
                            {
                                <span>@Localizer["CreateFirstFarewellPage"]</span>
                            }
                        </p>
                        <div class="mt-3">
                            <a asp-action="Create" asp-controller="FarewellPerson" class="btn btn-primary">@Localizer["CreateNewFarewellPage"]</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
        @if (string.IsNullOrEmpty(ViewBag.SearchTerm)){
            <div style="min-height: 50dvh"></div>
        }
</div>

@section Scripts  {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var el = document.getElementById('nav-find');
            if (el) el.classList.add('active');
        });
    </script>
}
