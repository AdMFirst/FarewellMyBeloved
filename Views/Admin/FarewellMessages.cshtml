@model FarewellMyBeloved.ViewModels.FarewellMessagesIndexViewModel
@{
    ViewData["Title"] = "Farewell Messages - Admin";
}

<div class="container py-5">
    <div class="row py-3">
        <div class="col-lg-12">
            <h2 class="mb-4">Farewell Messages Management</h2>

            @if (!Model.FarewellMessages.Any())
            {
                <div class="alert alert-info">
                    No farewell messages found.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Person</th>
                                <th>Author</th>
                                <th>Message</th>
                                <th>Created</th>
                                <th>Public</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var message in Model.FarewellMessages)
                            {
                                <tr>
                                    <td>@(message.FarewellPerson?.Name ?? "Unknown")</td>
                                    <td>@(message.AuthorName ?? "Anonymous")</td>
                                    <td>@(message.Message.Length > 50 ? message.Message.Substring(0, 50) + "..." : message.Message)</td>
                                    <td>@message.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        <span class="badge @(message.IsPublic ? "bg-success" : "bg-secondary")">
                                            @(message.IsPublic ? "Public" : "Private")
                                        </span>
                                    </td>
                                    <td>
                                        <a href="/@message.FarewellPerson!.Slug" class="btn btn-sm btn-outline-primary" target="_blank">View</a>
                                        <a href="/Admin/FarewellMessages/Edit/@message.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a href="/Admin/FarewellMessages/Delete/@message.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination Controls -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Farewell messages pagination">
                        <ul class="pagination justify-content-center">
                            @if (Model.PageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("FarewellMessages", new { page = Model.PageNumber - 1 })">Previous</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">Previous</span>
                                </li>
                            }

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                if (i == Model.PageNumber)
                                {
                                    <li class="page-item active">
                                        <span class="page-link">@i</span>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("FarewellMessages", new { page = i })">@i</a>
                                    </li>
                                }
                            }

                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("FarewellMessages", new { page = Model.PageNumber + 1 })">Next</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">Next</span>
                                </li>
                            }
                        </ul>
                    </nav>
                }

                <div class="row mt-3">
                    <div class="col-12">
                        <small class="text-muted">
                            Showing @(Model.FarewellMessages.Count * (Model.PageNumber - 1) + 1) to
                            @(Math.Min(Model.FarewellMessages.Count * Model.PageNumber, Model.TotalItems))
                            of @Model.TotalItems entries (Page @Model.PageNumber of @Model.TotalPages)
                        </small>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add truncate function if not already available
        if (!String.prototype.truncate) {
            String.prototype.truncate = function(length) {
                if (this.length <= length) return this;
                return this.substring(0, length) + '...';
            };
        }
    </script>
}