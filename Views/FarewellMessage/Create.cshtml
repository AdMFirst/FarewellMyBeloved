@model FarewellMyBeloved.ViewModels.CreateFarewellMessageViewModel

@{
    ViewData["Title"] = Localizer["CreateFarewellMessage"];
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white">
                    <h2 class="card-title mb-0 text-center">
                        <i class="fas fa-envelope me-2"></i>
                        @Localizer["AddFarewellMessage"]
                    </h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger"></div>
                        
                        @if (Model.FarewellPersonId.HasValue)
                        {
                            <div class="alert alert-info border-info">
                                <h5 class="alert-heading mb-2">
                                    <i class="fas fa-user me-2"></i>
                                    @Localizer["For"]: @Model.FarewellPersonName
                                </h5>
                                <input type="hidden" asp-for="FarewellPersonId" />
                            </div>
                        }
                        else
                        {
                            <div class="mb-4">
                                <label asp-for="FarewellPersonId" class="form-label fw-bold">
                                    <i class="fas fa-user-tag me-2"></i>@Localizer["ForWhom"]
                                </label>
                                <select asp-for="FarewellPersonId" class="form-select form-select-lg" asp-items="ViewBag.FarewellPeople">
                                    <option value="">@Localizer["SelectPerson"]</option>
                                </select>
                                <span asp-validation-for="FarewellPersonId" class="text-danger small"></span>
                            </div>
                        }
                        
                        <div class="mb-4">
                            <label asp-for="Message" class="form-label fw-bold">
                                <i class="fas fa-comment-dots me-2"></i>@Localizer["YourMessage"]
                            </label>
                            <textarea asp-for="Message" class="form-control" rows="6" placeholder="@Localizer["MessagePlaceholder"]"></textarea>
                            <span asp-validation-for="Message" class="text-danger small"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="AuthorName" class="form-label fw-bold">
                                    <i class="fas fa-signature me-2"></i>@Localizer["AuthorName"]
                                </label>
                                <input asp-for="AuthorName" class="form-control" placeholder="@Localizer["AuthorNamePlaceholder"]" />
                                <span asp-validation-for="AuthorName" class="text-danger small"></span>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    @Localizer["AuthorNameInfo"]
                                </small>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <label asp-for="AuthorEmail" class="form-label fw-bold">
                                    <i class="fas fa-envelope me-2"></i>@Localizer["AuthorEmail"]
                                </label>
                                <input asp-for="AuthorEmail" class="form-control" type="email" placeholder="@Localizer["AuthorEmailPlaceholder"]" />
                                <span asp-validation-for="AuthorEmail" class="text-danger small"></span>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    @Localizer["AuthorEmailInfo"]
                                </small>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <button type="submit" class="btn btn-success btn-lg px-4 py-2" style="min-width: 250px;">
                                <i class="fas fa-paper-plane me-2"></i>@ViewData["Create"]
                            </button>
                            <a href="/" class="btn btn-outline-secondary btn-lg px-4 py-2" style="min-width: 250px;">
                                <i class="fas fa-times me-2"></i>@Localizer["Cancel"]
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
