@model IEnumerable<FarewellMyBeloved.Models.FarewellPerson>

@{
    ViewData["Title"] = "Search Farewell People";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8 mx-auto">
            <h1 class="text-center mb-4">Search Farewell People</h1>
            
            <form asp-action="Search" method="get" class="mb-4">
                <div class="input-group">
                    <input type="text" name="searchTerm" class="form-control" 
                           placeholder="Search by name or description..." 
                           value="@ViewBag.SearchTerm">
                    <button class="btn btn-primary" type="submit">Search</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
    {
        <div class="row mb-4">
            <div class="col-12">
                <h3>Search results for: "@ViewBag.SearchTerm"</h3>
            </div>
        </div>
    }

    <div class="row">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(item.PortraitUrl))
                        {
                            <img src="@item.PortraitUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <span class="text-muted">No Portrait</span>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description.Substring(0, Math.Min(item.Description.Length, 100))@(item.Description.Length > 100 ? "..." : "")</p>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">View Details</a>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">Created: @item.CreatedAt.ToString("g")</small>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <h3>@(!string.IsNullOrEmpty(ViewBag.SearchTerm) ? "No results found" : "No farewell people found")</h3>
                    <p class="text-muted">
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                        {
                            <span>We couldn't find any farewell people matching "@ViewBag.SearchTerm".</span>
                        }
                        else
                        {
                            <span>Create your first farewell person to get started.</span>
                        }
                    </p>
                    <div class="mt-3">
                        <a asp-action="Create" class="btn btn-primary">Create New Farewell Person</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>