@inject Microsoft.AspNetCore.Authorization.IAuthorizationService AuthorizationService
@{
    var isAdmin = User.Identity?.IsAuthenticated == true &&
        (await AuthorizationService.AuthorizeAsync(User, null, "AdminsOnly")).Succeeded;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FarewellMyBeloved</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css"/>
    <script src="https://cdn.jsdelivr.net/npm/%40floating-ui/core@1.7.3"></script>
    <script src="https://cdn.jsdelivr.net/npm/%40floating-ui/dom@1.7.3"></script>
    <link rel="stylesheet" href="~/FarewellMyBeloved.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FarewellMyBeloved</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="FarewellPerson" asp-action="Create">Create Page</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Search">Find Page</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="AboutUs" asp-action="Index">About Us</a>
                        </li>
                        @if (isAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Dashboard</a>
                            </li>
                        }
                        
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @if (!isAdmin)
                            {
                                <a id="donateButton" class="btn btn-outline-primary" href="https://sociabuzz.com/admfirst/tribe" target="_blank" style="background-color: #77cd10; color: white; border-color: #77cd10;">
                                    <i class="fas fa-coffee"></i> Support me on SociaBuzz
                                </a>
                            }
                            @if (isAdmin)
                            {
                                <a class="btn btn-outline-danger text-dark" asp-controller="Admin" asp-action="Logout">Logout<i class="fa-solid fa-right-from-bracket ps-2" aria-hidden="true"></i></a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - AdMFirst - <a href="https://github.com/AdMFirst/FarewellMyBeloved" target="_blank">Contribute</a> - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

