@model FarewellMyBeloved.Models.FarewellPerson

@{
    ViewData["Title"] = "Delete Farewell Person";
}

<h1>Delete Farewell Person</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Farewell Person</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.PortraitUrl)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.PortraitUrl)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.BackgroundUrl)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.BackgroundUrl)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.IsPublic)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.IsPublic)
        </dd>
    </dl>

    @if (Model.Messages.Any())
    {
        <div class="alert alert-warning">
            <h5>Warning:</h5>
            <p>This farewell person has @Model.Messages.Count farewell message(s) associated with it. Deleting this person will also delete all associated messages.</p>
        </div>
    }

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>