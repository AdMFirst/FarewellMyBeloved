@{
    ViewData["Title"] = ViewData["AboutUs"];
}

<section class="container" style="max-width:700px;margin:2rem auto;padding:1rem;">
    <h1>@ViewData["Title"]</h1>
    <p class="lead">@Localizer["IntroLead"]</p>

    <p>@Localizer["P2"]</p>

    <p>@Localizer["P3"]</p>

    <hr />

    <h2>@Localizer["WhoBehind"]</h2>
    <p>@Localizer["P4"]</p>
    <p>@Localizer["P5"]</p>
    <p>@Localizer["P6"]</p>

    <hr />
    <footer style="margin-top:1rem;font-size:.9rem;color:#666;">
        Made with ❤️ for the community
    </footer>
</section>

@section Scripts  {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var el = document.getElementById('nav-about');
            if (el) el.classList.add('active');
        });
    </script>
}
