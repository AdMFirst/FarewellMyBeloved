@model FarewellMyBeloved.ViewModels.AdminLogsIndexViewModel
@{
    ViewData["Title"] = "Admin Logs - Admin";
}

<div class="container py-5">
    <div class="row py-3">
        <div class="col-lg-12">
            <h2 class="mb-4">Admin Logs</h2>
            
            @if (!Model.Logs.Any())
            {
                <div class="alert alert-info">
                    No logs found.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Moderator</th>
                                <th>Action</th>
                                <th>Target</th>
                                <th>Reason</th>
                                <th>Created</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model.Logs)
                            {
                                <tr>
                                    <td>@log.Id</td>
                                    <td>@log.ModeratorName</td>
                                    <td>
                                        <span class="badge bg-primary">@log.Action</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(log.TargetType) && log.TargetId > 0)
                                        {
                                            <span>@log.TargetType #@log.TargetId</span>
                                        }
                                        else
                                        {
                                            <span>N/A</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(log.Reason))
                                        {
                                            <span class="text-muted">@log.Reason</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>@log.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination Controls -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Admin logs pagination">
                        <ul class="pagination justify-content-center">
                            @if (Model.PageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("AdminLogs", new { page = Model.PageNumber - 1 })">Previous</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">Previous</span>
                                </li>
                            }

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                if (i == Model.PageNumber)
                                {
                                    <li class="page-item active">
                                        <span class="page-link">@i</span>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("AdminLogs", new { page = i })">@i</a>
                                    </li>
                                }
                            }

                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("AdminLogs", new { page = Model.PageNumber + 1 })">Next</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">Next</span>
                                </li>
                            }
                        </ul>
                    </nav>
                }

                <div class="row mt-3">
                    <div class="col-12">
                        <small class="text-muted">
                            Showing @(Model.Logs.Count * (Model.PageNumber - 1) + 1) to
                            @(Math.Min(Model.Logs.Count * Model.PageNumber, Model.TotalItems))
                            of @Model.TotalItems entries (Page @Model.PageNumber of @Model.TotalPages, @Model.PageSize per page)
                        </small>
                    </div>
                </div>
            }
        </div>
    </div>
</div>