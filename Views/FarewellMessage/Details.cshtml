@model FarewellMyBeloved.Models.FarewellMessage

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>Farewell Message</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h5 class="card-title">@Model.Message</h5>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Author:</strong> @(string.IsNullOrEmpty(Model.AuthorName) ? "Anonymous" : Model.AuthorName)</p>
                            <p><strong>Email:</strong> @(string.IsNullOrEmpty(Model.AuthorEmail) ? "Not provided" : Model.AuthorEmail)</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Created:</strong> @Model.CreatedAt.ToString("g")</p>
                            <p><strong>Status:</strong> @(Model.IsPublic ? "Public" : "Private")</p>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <p><strong>For:</strong> <a asp-controller="FarewellPerson" asp-action="Details" asp-route-id="@Model.FarewellPersonId">@Model.FarewellPerson?.Name</a></p>
                    </div>
                    
                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                        <a asp-controller="FarewellPerson" asp-action="Details" asp-route-id="@Model.FarewellPersonId" class="btn btn-secondary">Back to Person</a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Message Info</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>
                        
                        <dt class="col-sm-4">Author:</dt>
                        <dd class="col-sm-8">@((string.IsNullOrEmpty(Model.AuthorName) ? "Anonymous" : Model.AuthorName))</dd>
                        
                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@((string.IsNullOrEmpty(Model.AuthorEmail) ? "Not provided" : Model.AuthorEmail))</dd>
                        
                        <dt class="col-sm-4">Created:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("g")</dd>
                        
                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">@((Model.IsPublic ? "Public" : "Private"))</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>