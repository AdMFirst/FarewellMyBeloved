@model FarewellMyBeloved.ViewModels.ContentReportsIndexViewModel
@{
    ViewData["Title"] = "Content Reports - Admin";
}

<div class="container py-5">
    <div class="row py-3">
        <div class="col-lg-12">
            <h2 class="mb-4">Content Reports Management</h2>

            @if (!Model.ContentReports.Any())
            {
                <div class="alert alert-info">
                    No content reports found.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Report ID</th>
                                <th>Related Content</th>
                                <th>Email</th>
                                <th>Reason</th>
                                <th>Created</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var report in Model.ContentReports)
                            {
                                var relatedContent = "N/A";
                                var viewUrl = "";
                                
                                if (report.FarewellPersonId.HasValue && Model.PersonLookup != null)
                                {
                                    if (Model.PersonLookup.TryGetValue(report.FarewellPersonId.Value!, out var person))
                                    {
                                        relatedContent = person.Name;
                                        viewUrl = $"/{person.Slug}";
                                    }
                                }
                                else if (report.FarewellMessageId.HasValue && Model.MessageLookup != null)
                                {
                                    if (Model.MessageLookup.TryGetValue(report.FarewellMessageId.Value!, out var message))
                                    {
                                        relatedContent = message.FarewellPerson?.Name ?? "Unknown Person";
                                        viewUrl = $"/{message.FarewellPerson?.Slug}/message/{message.Id}";
                                    }
                                }
                                
                                <tr>
                                    <td>@report.Id.ToString().Substring(0, 8)</td>
                                    <td>@relatedContent</td>
                                    <td>@(report.Email ?? "N/A")</td>
                                    <td>
                                        <span class="badge bg-warning text-dark">@report.Reason</span>
                                    </td>
                                    <td>@report.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        @if (report.ResolvedAt.HasValue)
                                        {
                                            <span class="badge bg-success">Resolved</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" disabled>View</button>
                                        <button class="btn btn-sm btn-outline-info" disabled>Details</button>
                                        @if (!report.ResolvedAt.HasValue)
                                        {
                                            <button class="btn btn-sm btn-outline-success" disabled>Resolve</button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination Controls -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Farewell people pagination">
                        <ul class="pagination justify-content-center">
                            @if (Model.PageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("ContentReports", new { page = Model.PageNumber - 1 })">Previous</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">Previous</span>
                                </li>
                            }

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                if (i == Model.PageNumber)
                                {
                                    <li class="page-item active">
                                        <span class="page-link">@i</span>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("ContentReports", new { page = i })">@i</a>
                                    </li>
                                }
                            }

                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("ContentReports", new { page = Model.PageNumber + 1 })">Next</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">Next</span>
                                </li>
                            }
                        </ul>
                    </nav>
                }

                <div class="row mt-3">
                    <div class="col-12">
                        <small class="text-muted">
                            Showing @(Model.ContentReports.Count * (Model.PageNumber - 1) + 1) to
                            @(Math.Min(Model.ContentReports.Count * Model.PageNumber, Model.TotalItems))
                            of @Model.TotalItems entries (Page @Model.PageNumber of @Model.TotalPages)
                        </small>
                    </div>
                </div>
            }
        </div>
    </div>
</div>